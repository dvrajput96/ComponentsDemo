<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_3sdp"
    android:background="@drawable/round_corner_border"
    android:orientation="vertical"
    android:tag="card view container">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        card_view:cardBackgroundColor="@color/wallet_bright_foreground_holo_dark"
        card_view:cardCornerRadius="@dimen/_13sdp"
        card_view:cardElevation="@dimen/_5sdp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email = "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2" />

            <TextView
                android:id="@+id/txtemailshow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="@string/email"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2" />


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
